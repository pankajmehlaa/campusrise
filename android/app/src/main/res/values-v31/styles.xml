<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Android 12+ splash screen configuration -->
    <style name="LaunchTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowSplashScreenBackground">@color/splash_color</item>
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>
        <item name="android:windowSplashScreenBrandingImage">@null</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="NormalTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="android:statusBarColor">@color/splash_color</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
